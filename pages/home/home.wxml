<w-tab-control  titles="{{titles}}" wx:if="{{isTabFixed}}"></w-tab-control>
<!-- 5.展示商品数据 -->
<w-goods goods="{{goods[currentType].list}}"></w-goods>
<!-- 6.回到顶部 -->
<w-back-top wx:if="{{showBackTop}}"></w-back-top>