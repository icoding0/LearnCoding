<w-swiper list="{{banners}}"></w-swiper>
<!-- 2.推荐数据展示 -->
<w-recommend recommends="{{recommends}}" bind:imageload="handleImageLoad"></w-recommend>
<!-- 3.展示本周流行 -->
<w-popular></w-popular>
