<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>hello world\n</text>
<text>小程序\n</text>
<!-- 2. selectable: true -->
<!-- 默认false 不能选中 -->
<text selectable="{{true}}">hello Coderwhy</text>
<text selectable>hello Coderwhy</text>

<!-- 3.space :决定文本空格的大小 -->
<!-- ensp :半个中文字符 -->
<!-- emsp:1个中文字符  -->
<text >hello world\n</text>
<text space="nbsp">hello world\n</text>
<text space="emsp">hello world\n</text>
<text space="ensp">hello world\n</text>

<!-- 4.decode 是否解码文本 -->
<text decode="{{true}}">5 &gt; 3</text>